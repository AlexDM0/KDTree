source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!

target 'KDTree_Example' do
    platform :ios, '8.0'
    
    pod 'KDTree', :path => '../'
    pod 'XCGLogger', '~> 4.0.0'

    target 'KDTree_Tests' do
        inherit! :search_paths
        
        pod 'Quick', '~> 0.10.0'
        pod 'Nimble', '~> 5.1.1'
    end
    
end


target 'KDTree_OSX_Example' do
    platform :osx, '10.10'

    pod 'KDTree', :path => '../'
    pod 'XCGLogger', '~> 4.0.0'

    target 'KDTree_OSX_ExampleTests' do
        inherit! :search_paths
    end
end
